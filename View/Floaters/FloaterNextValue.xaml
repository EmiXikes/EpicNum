<Window x:Class="EpicNum.View.Floaters.FloaterNextValue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EpicNum.View.Floaters"
        mc:Ignorable="d"
        Title="FloaterNextValue" Height="30" Width="200" WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False" Background="{x:Null}" Foreground="{x:Null}" Topmost="True">
    <Border Background="{DynamicResource Epic.Colors.BackGround.Normal}" BorderThickness="3" CornerRadius="5" BorderBrush="{DynamicResource Epic.Colors.Accent.Mix.0.Pressed}">
        <TextBlock Text="{Binding NextValue}" Foreground="{DynamicResource Epic.Colors.Accent.Mix.0.Pressed}" VerticalAlignment="Center" Margin="7,0,0,0" FontSize="22" FontFamily="Open Sans Extrabold"/>
    </Border>
</Window>
